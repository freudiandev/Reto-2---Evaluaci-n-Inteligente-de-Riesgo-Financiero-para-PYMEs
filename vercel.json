{
  "version": 2,
  "name": "pymes-risk-frontend",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "installCommand": "npm ci",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "frontend/src/**": {
      "runtime": "nodejs18.x"
    }
  },
  "env": {
    "NODE_VERSION": "18.18.0",
    "VITE_API_URL": "https://backend-riesgo-pymes-the-orellanas-boyz.onrender.com/api/v1",
    "VITE_BACKEND_URL": "https://backend-riesgo-pymes-the-orellanas-boyz.onrender.com"
  }
}
